<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course number</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_number %></td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.start_date %></td>
        <td><%= course.end_date %></td>
        <td><%= course.status %></td>
        <td><%= link_to 'Show', course, class: 'btn btn-warning btn-sm' %></td>
        <% if (current_user.is_a? Admin) || (current_user.is_a? Instructor) %>
            <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning btn-sm' %></td>
        <% end %>
        <% if current_user.is_a? Admin %>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

